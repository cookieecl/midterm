      margin-top: 0.5rem;
      padding-top: 0.5rem;
      border-top: 1px dashed #ccc;
    }

    .actions {
      margin-top: 0.75rem;
      font-size: 0.9rem;
    }

    .actions a p,
    .actions span p,
    .actions form {
      display: inline;
    }

    .actions a p {
      color: #34545b;
      font-weight: bold;
    }

    button {
