      justify-content: space-between;
      gap: 0.3rem;
    }

    .event-card p {
      margin: 0;
      font-size: 0.95rem;
    }

    .event-card p strong {
      font-size: 1.1rem;
      display: block;
      margin-bottom: 0.5rem;
    }

