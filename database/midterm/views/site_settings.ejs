<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Site Settings</title>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      background-color: #fff6e1;
      font-family: 'Quicksand', sans-serif;
      color: #4b3b2a;
    }

    header {
      background-color: #a2b9cd;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      flex-wrap: wrap;
    }

    .header-left {
      flex: 1 1 auto;
    }

    .header-title {
      font-size: 2.2rem;
      font-weight: bold;
    }

    .header-subtitle {
      font-size: 0.9rem;
      margin-top: 0.3rem;
    }


    .header-button {
      background-color: #fff;
      color: #4b3b2a;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-weight: bold;
      font-size: 0.95rem;
      cursor: pointer;
      text-decoration: none;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      transition: background-color 0.3s;
    }

    .header-button:hover {
      background-color: #e5e5e5;
    }

    .main {
      max-width: 700px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    h1 {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
      border-bottom: 2px solid #a2b9cd;
      padding-bottom: 0.5rem;
    }

    label {
      font-weight: bold;
      display: block;
      margin-top: 1.5rem;
    }

    input[type="text"],
    textarea {
      width: 100%;
      padding: 0.6rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-family: 'Quicksand', sans-serif;
      resize: none;
      box-sizing: border-box;
    }

    button {
      margin-top: 2rem;
      background-color: #8b5e3c;
      color: white;
      padding: 0.7rem 1.5rem;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      box-shadow: 0 2px 5px rgba(0,0,0,0.15);
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #754a2e;
    }

    .back-link {
      display: inline-block;
      margin-top: 2rem;
      color: #4b3b2a;
      text-decoration: underline;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <header>
    <div class="header-left">
      <div class="header-title">site settings</div>
      <div class="header-subtitle"><%= settings.site_name %> - <%= settings.site_description %></div>
    </div>
    <div class="header-links">
      <a class="header-button" href="/">Home</a>
    </div>
  </header>

  <div class="main">
    <form method="POST" onsubmit="return validateForm()">
      <label for="site_name">Site Name:</label>
      <input type="text" name="site_name" id="site_name" value="<%= settings.site_name %>" required />

      <label for="description-textarea">Site Description:</label>
      <textarea
        name="site_description"
        id="description-textarea"
        required
        style="overflow:hidden; min-height: 60px;"
      ><%= settings ? settings.site_description : '' %></textarea>

      <button type="submit">Save Settings</button>
    </form>

    <a class="back-link" href="/organiser">‚Üê Back to Organiser Home</a>
  </div>

  <script>
    function validateForm() {
      const name = document.querySelector('[name="site_name"]').value.trim();
      const desc = document.querySelector('[name="site_description"]').value.trim();
      if (!name || !desc) {
        alert("Please fill out all fields.");
        return false;
      }
      return true;
    }

    const textarea = document.getElementById('description-textarea');
    function autoResize() {
      textarea.style.height = 'auto';
      textarea.style.height = textarea.scrollHeight + 'px';
    }
    autoResize();
    textarea.addEventListener('input', autoResize);
  </script>
</body>
</html>
